#!/bin/bash

source orkhideya
ork_include stdlib
ork_include stdout

if [ "$(id -u)" != "0" ]; then
   stdout_debug "Elevating "$0""
   sudo -E -p "$(color_render "$(stdout_inform warning Root is required to continue.)"; printf '%s ' "$(color_render $ORK_STDOUT_PROMPT)")" -- "$0" "$@" 
   exit $?
fi
